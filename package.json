{
  "name": "secure-chat-app",
  "version": "1.0.0",
  "description": "A secure chat application built with Electron and React",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "rimraf dist && concurrently -k \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\" \"npm run electron\"",
    "dev:main": "cross-env NODE_ENV=development TARGET=main webpack --watch",
    "dev:preload": "cross-env NODE_ENV=development TARGET=preload webpack --watch",
    "dev:renderer": "cross-env NODE_ENV=development TARGET=renderer webpack serve --progress",
    "electron": "wait-on -v -d 15000 -t 60000 tcp:3007 && cross-env NODE_ENV=development electron dist/main/main.js",
    "build": "rimraf dist && cross-env NODE_ENV=production webpack --config webpack.config.js",
    "start": "cross-env NODE_ENV=production electron dist/main/main.js",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/plugin-transform-runtime": "^7.26.10",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@tailwindcss/forms": "^0.5.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/electron": "^1.6.10",
    "@types/jest": "^29.5.14",
    "@types/libsodium-wrappers": "^0.7.13",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.17",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^6.9.1",
    "electron": "^28.1.4",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.4.33",
    "postcss-loader": "^8.0.0",
    "process": "^0.11.10",
    "rimraf": "^6.0.1",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.3.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "libsodium-wrappers": "^0.7.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.3"
  }
}
